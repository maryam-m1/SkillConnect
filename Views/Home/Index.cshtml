@{
    ViewData["Title"] = "Home - SkillConnect";
}

<div class="game-home-wrapper">
    <div class="gaming-objects">
        <div class="obj puzzle-piece p-1"><i class="fas fa-puzzle-piece"></i></div>
        <div class="obj brain-icon p-2"><i class="fas fa-brain"></i></div>
        <div class="obj puzzle-piece p-3"><i class="fas fa-shapes"></i></div>
        <div class="obj gear-icon p-4"><i class="fas fa-cog"></i></div>
        <div class="obj logic-icon p-5"><i class="fas fa-microchip"></i></div>
    </div>
    <div class="vibrant-gaming-gradient"></div>

    <div class="container-fluid px-5 content-container content-lift">
        
        <div class="row mb-2">
            <div class="col-12 text-center">
                <div class="mega-brand-block animate__animated animate__fadeInDown">
                    <span class="welcome-text">WELCOME TO</span>
                    <h1 class="brand-display">SkillConnect</h1>
                    <div class="brand-line"></div>
                </div>
            </div>
        </div>

        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <div class="hero-box">
                    <h2 class="display-5 fw-bold text-dark mb-2">
                        Find Your True <br><span class="text-gradient">Career North.</span>
                    </h2>
                    <p class="text-muted mb-3 small-text">
                        Unlock your potential with our advanced 6D Quiz.
                    </p>
                    
                    <div class="brain-window shadow-lg animate__animated animate__zoomIn">
                        <img src="/images/inkpendude-hard-wired4.gif" class="img-fluid rounded-4" alt="Brain to Career Illustration">
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="interaction-stack">
                    <div class="mb-3">
                        <a asp-controller="Home" asp-action="Register" class="btn btn-primary btn-lg rounded-pill w-100 py-3 shadow-glow hover-grow">
                            Get Started - Register
                        </a>
                    </div>

                    <div class="row g-3">
                        <div class="col-12">
                            <a asp-controller="Home" asp-action="Analysis" class="text-decoration-none">
                                <div class="glass-feature-card p-4 rounded-4 transition-hover">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-orb bg-primary-grad me-3">
                                            <i class="fas fa-brain text-white"></i>
                                        </div>
                                        <div>
                                            <h5 class="text-dark fw-bold mb-0">6D Analysis</h5>
                                            <p class="small text-muted mb-0">Aptitude assessment & brain mapping.</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-12">
                            <a asp-controller="Home" asp-action="Matching" class="text-decoration-none">
                                <div class="glass-feature-card p-4 rounded-4 transition-hover">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-orb bg-info-grad me-3">
                                            <i class="fas fa-puzzle-piece text-white"></i>
                                        </div>
                                        <div>
                                            <h5 class="text-dark fw-bold mb-0">Euclidean Matching</h5>
                                            <p class="small text-muted mb-0">Mathematically connecting games to data.</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* 1. COSMIC NEURAL BACKGROUND */
    .game-home-wrapper {
        position: relative;
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 25%, #0f3460 50%, #533483 75%, #1a1a2e 100%);
        display: flex;
        align-items: flex-start;
        overflow: hidden;
        padding-top: 20px;
    }

    .game-home-wrapper::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 30%, rgba(255, 0, 128, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 80% 20%, rgba(0, 200, 255, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 40% 70%, rgba(138, 43, 226, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 70% 80%, rgba(255, 100, 0, 0.12) 0%, transparent 40%);
        animation: cosmicPulse 8s ease-in-out infinite alternate;
        z-index: 1;
    }

    @@keyframes cosmicPulse {
        0% { opacity: 0.6; transform: scale(1); }
        100% { opacity: 1; transform: scale(1.1); }
    }

    .vibrant-gaming-gradient {
        position: absolute;
        width: 100%; 
        height: 100%;
        background: 
            radial-gradient(circle at 15% 15%, rgba(255, 0, 150, 0.2) 0%, transparent 30%),
            radial-gradient(circle at 85% 85%, rgba(0, 150, 255, 0.2) 0%, transparent 30%),
            radial-gradient(circle at 50% 50%, rgba(100, 0, 255, 0.15) 0%, transparent 50%);
        z-index: 0;
        animation: gradientShift 15s ease infinite;
    }

    @@keyframes gradientShift {
        0%, 100% { opacity: 0.8; }
        50% { opacity: 1; }
    }

    .gaming-objects .obj {
        position: absolute;
        font-size: 2.5rem;
        color: rgba(255, 255, 255, 0.08);
        z-index: 2;
        animation: floatGaming 15s infinite alternate ease-in-out;
        text-shadow: 0 0 20px rgba(138, 43, 226, 0.4);
    }

    .p-1 { top: 15%; left: 5%; animation-delay: 0s; color: rgba(255, 0, 150, 0.12); }
    .p-2 { top: 40%; right: 10%; animation-delay: -3s; color: rgba(0, 200, 255, 0.12); }
    .p-3 { bottom: 15%; left: 10%; animation-delay: -6s; color: rgba(138, 43, 226, 0.12); }
    .p-4 { top: 10%; right: 40%; animation-delay: -9s; color: rgba(255, 100, 0, 0.12); }
    .p-5 { bottom: 20%; right: 30%; animation-delay: -12s; color: rgba(0, 255, 200, 0.12); }

    @@keyframes floatGaming {
        0% { transform: translateY(0) rotate(0deg) scale(1); opacity: 0.15; }
        100% { transform: translateY(-100px) rotate(360deg) scale(1.2); opacity: 0.35; }
    }

    /* 2. SHIFT CONTENT UP */
    .content-lift {
        margin-top: -15px;
        position: relative;
        z-index: 10;
    }

    /* 3. UPDATED BRANDING BLOCK (Cosmic Theme) */
    .mega-brand-block {
        display: inline-block;
        padding: 10px 70px;
        background: rgba(30, 30, 50, 0.7);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        border: 2px solid rgba(138, 43, 226, 0.3);
        box-shadow: 0 15px 35px rgba(138, 43, 226, 0.2), 0 0 50px rgba(0, 200, 255, 0.1);
        transition: all 0.4s ease;
    }

    .mega-brand-block:hover {
        box-shadow: 0 20px 50px rgba(138, 43, 226, 0.4), 0 0 80px rgba(0, 200, 255, 0.2);
        transform: translateY(-5px);
    }

    .brand-display {
        font-weight: 950;
        font-size: 3.4rem;
        background: linear-gradient(90deg, #00d4ff, #8a2be2, #ff0080);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
        text-shadow: 0 0 30px rgba(138, 43, 226, 0.5);
    }

    /* Layout Utilities with Cosmic Theme */
    .brain-window { 
        background: rgba(30, 30, 50, 0.6); 
        padding: 10px; 
        border-radius: 24px; 
        max-width: 470px;
        border: 2px solid rgba(138, 43, 226, 0.2);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3), 0 0 30px rgba(138, 43, 226, 0.2);
        transition: all 0.4s ease;
        overflow: hidden;
    }

    .brain-window:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.4), 0 0 50px rgba(138, 43, 226, 0.4);
    }

    .glass-feature-card { 
        background: rgba(30, 30, 50, 0.7); 
        border: 1px solid rgba(138, 43, 226, 0.2); 
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
    }

    .transition-hover:hover { 
        transform: scale(1.03) translateX(10px); 
        border-color: #8a2be2; 
        box-shadow: 0 15px 40px rgba(138, 43, 226, 0.3), 0 0 30px rgba(0, 200, 255, 0.2) !important; 
        background: rgba(40, 40, 70, 0.8);
    }
    
    .icon-orb { 
        width: 50px; 
        height: 50px; 
        border-radius: 14px; 
        display: flex; 
        align-items: center; 
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .icon-orb:hover {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 8px 25px rgba(138, 43, 226, 0.5);
    }

    .bg-primary-grad { 
        background: linear-gradient(135deg, #8a2be2, #4a148c); 
    }
    
    .bg-info-grad { 
        background: linear-gradient(135deg, #00d4ff, #0066cc); 
    }
    
    .text-gradient { 
        background: linear-gradient(90deg, #00d4ff, #8a2be2); 
        -webkit-background-clip: text; 
        -webkit-text-fill-color: transparent; 
    }
    
    .welcome-text { 
        font-size: 0.8rem; 
        letter-spacing: 5px; 
        color: #00d4ff; 
        font-weight: 800;
        text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
    }
    
    .brand-line { 
        height: 5px; 
        width: 80px; 
        background: linear-gradient(90deg, #00d4ff, #8a2be2); 
        margin: 5px auto 0; 
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(138, 43, 226, 0.5);
    }

    .hero-box h2 {
        color: #ffffff !important;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
    }

    .text-dark {
        color: #ffffff !important;
    }

    .btn-primary {
        background: linear-gradient(135deg, #8a2be2, #4a148c);
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(138, 43, 226, 0.4);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #9d3bff, #5a1a9c);
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(138, 43, 226, 0.6);
    }
</style>