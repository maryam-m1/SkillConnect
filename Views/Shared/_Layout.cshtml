@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillConnect 💡 Career Path</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        /* 1. GIF BACKGROUND REPLACEMENT */
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            /* Replaced gradient with your requested GIF */
            background-image: url('/images/14e9c1fa08891b41f23b7cdd02904c0e.gif');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            position: relative;
            overflow-x: hidden;
        }

        /* 2. DYNAMIC BRAND & LOGIN TRANSITIONS */
        .navbar-brand, .btn-transition {
            background: linear-gradient(90deg, #00d4ff, #8a2be2, #ff0080, #00d4ff);
            background-size: 300% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: textFlow 6s linear infinite;
            font-weight: 800;
            transition: transform 0.3s ease, text-shadow 0.3s ease;
        }

        .navbar-brand:hover {
            transform: scale(1.08);
            text-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
        }

        /* Sign In Button Enhancements */
        .btn-outline-primary {
            border: 2px solid #00d4ff !important;
            position: relative;
            overflow: hidden;
            z-index: 1;
            color: #00d4ff !important;
            transition: all 0.4s ease !important;
        }

        .btn-outline-primary:hover {
            background: linear-gradient(45deg, #00d4ff, #8a2be2) !important;
            color: #fff !important;
            box-shadow: 0 0 20px rgba(0, 212, 255, 0.6);
            border-color: transparent !important;
        }

        @@keyframes textFlow {
            0% { background-position: 0% 50%; }
            100% { background-position: 100% 50%; }
        }

        /* ===== FOOTER (MODIFIED FOR BLUE THEME) ===== */
        .footer-tape-container {
            background: #1e2a47 !important; 
            border-top: 2px solid #00d4ff; 
            box-shadow: 0 -5px 20px rgba(0, 212, 255, 0.3); 
            overflow: hidden;
            white-space: nowrap;
            padding: 12px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            z-index: 1000;
        }

        .moving-tape-text {
            display: inline-block;
            font-weight: 800;
            color: #ffffff; 
            text-shadow: 0 0 10px #00d4ff; 
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 3px;
            animation: marqueeTape 35s linear infinite;
        }

        @@keyframes marqueeTape {
            0% { transform: translateX(100%); }
            100% { transform: translateX(-100%); }
        }

        /* Navbar & Main Spacing */
        header .navbar {
            background: rgba(10, 10, 25, 0.85) !important;
            backdrop-filter: blur(15px);
            border-bottom: 2px solid rgba(0, 212, 255, 0.3) !important;
        }

        main { padding-bottom: 100px; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-compass me-2"></i> SkillConnect
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info fw-bold" asp-area="" asp-controller="Home" asp-action="Quiz">
                                    <i class="fas fa-fire me-1"></i> Start Journey
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white fw-bold me-2">
                                    <i class="fas fa-id-badge me-1"></i> @Context.Session.GetString("FullName")
                                </span> 
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-danger fw-bold px-3" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-primary fw-bold px-4" asp-controller="Home" asp-action="Login">
                                    <i class="fas fa-user-astronaut me-1"></i> Sign In
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-tape-container">
        <div class="moving-tape-text">
            Test your present, design your future ! 🔮💡 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            Quiz smart, live smarter! 😎✌ &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            Your future, your score! 🎯✨
        </div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>